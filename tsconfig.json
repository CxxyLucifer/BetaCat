{
    "compilerOptions": {
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./build/",
        "allowJs": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "module": "ES2015",
        "target": "es6",
        "jsx": "react-native"
    },
    "include": [
        "src"
    ]
}